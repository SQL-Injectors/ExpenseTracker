<h2>Add Expense</h2>
    <form id="add-expense">
        <div style="display:inline-block">
        <label for="description">Description</label> <br>
        <input id="description" type="text" class="form-control" required>
        </div>
        <div style="display:inline-block">
        <label for="amount">Amount</label> <br>
        <input id="amount" type="number" class="form-control" placeholder="00.00" step=".01" min=".01" required>
        </div>
        <div style="display:inline-block">
        <label for="date">Date</label> <br>
        <input id="date" type="date" class="form-control" required>
        </div>
        <div style="display:inline-block">
        <label for="category">Category</label> <br>
            <select id="category" class="form-control" required>
            <option value="">-- Select a Category --</option> 
            {{#each categories}}
                <option value={{this.id}}>{{category_name}}</option>
            {{/each}}
            </select>
        </div> <br> <br>
        <input id="submit" type="submit" class="btn btn-success"> 
    </form>